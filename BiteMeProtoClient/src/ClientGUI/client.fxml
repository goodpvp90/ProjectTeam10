<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="ClientGUI.clientController" spacing="10.0">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <children>
        <Text fx:id="welcomeText" text="Hello user! Please choose an action:"/>
        <HBox spacing="10.0">
            <children>
                <Button text="VIEW" onAction="#handleViewButton"/>
                <Button text="UPDATE" onAction="#handleUpdateButton"/>
                <Button text="QUIT" onAction="#handleQuitButton"/>
            </children>
        </HBox>
        <ListView fx:id="ordersListView"/>
        <VBox fx:id="ordersContainer" spacing="5.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </children>
</VBox>
